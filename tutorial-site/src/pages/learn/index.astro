---
// Learn Hub - Main entry point for the gamified learning course
// Shows path selection or world map based on user's progress state

import BaseLayout from '../../layouts/BaseLayout.astro';
import ProgressHeader from '../../components/learn/ProgressHeader.astro';
import WorldMap from '../../components/learn/WorldMap.astro';
import StreakDisplay from '../../components/learn/StreakDisplay.astro';
import PathCard from '../../components/learn/PathCard.astro';
import fs from 'fs';
import path from 'path';

// Load learning paths data
const learningPathsDir = path.join(process.cwd(), '../learning-paths');

function loadPaths(category: string) {
  const categoryDir = path.join(learningPathsDir, category);
  const files = fs.readdirSync(categoryDir).filter(f => f.endsWith('.json'));

  return files
    .map(file => {
      const content = fs.readFileSync(path.join(categoryDir, file), 'utf-8');
      return JSON.parse(content);
    })
    .filter(pathData => !pathData.hidden); // Filter out hidden paths
}

const personas = loadPaths('personas');
const tracks = loadPaths('tracks');
const journeys = loadPaths('suggested-journeys');

// Calculate total steps for each path
function getPathStats(pathData: any) {
  let topicCount = 0;

  if (pathData.milestones) {
    pathData.milestones.forEach((m: any) => {
      topicCount += m.steps?.length || 0;
    });
  } else if (pathData.journey_steps) {
    topicCount = pathData.journey_steps.length;
  }

  return {
    topicCount,
    estimatedMinutes: pathData.estimated_total_time_minutes || 60,
    objectives: pathData.objectives || [],
  };
}

// Get featured paths (one from each category)
const featuredPaths = [
  { ...personas[0], category: 'personas' as const },
  { ...tracks[0], category: 'tracks' as const },
  { ...journeys[0], category: 'journeys' as const },
];

// Create a map of all paths for client-side lookup
const allPathsMap: Record<string, { name: string; category: string }> = {};
personas.forEach(p => { allPathsMap[p.id] = { name: p.name, category: 'personas' }; });
tracks.forEach(t => { allPathsMap[t.id] = { name: t.name, category: 'tracks' }; });
journeys.forEach(j => { allPathsMap[j.id] = { name: j.name, category: 'journeys' }; });
---

<BaseLayout title="Learn | How to Build an App">
  <main class="learn-hub">
    <!-- Hero section -->
    <section class="learn-hero">
      <div class="hero-content">
        <h1 class="hero-title">Your Learning Journey</h1>
        <p class="hero-description">
          Navigate through the development lifecycle with guided paths designed for your goals.
          Track your progress, maintain streaks, and master the art of building great software.
        </p>
      </div>
    </section>

    <!-- Main content area - switches based on state -->
    <div class="learn-content">
      <!-- Left column: World map or path selection -->
      <div class="main-column">
        <!-- State: No active path - show path selection -->
        <section class="path-selection" id="path-selection">
          <div class="section-header">
            <h2>Choose Your Journey</h2>
            <p>Select a learning path that matches your goals and experience level.</p>
          </div>

          <!-- Featured paths -->
          <div class="featured-paths">
            <h3 class="subsection-title">Featured Paths</h3>
            <div class="path-grid featured">
              {featuredPaths.map((pathData) => {
                const stats = getPathStats(pathData);
                return (
                  <PathCard
                    id={pathData.id}
                    name={pathData.name}
                    category={pathData.category}
                    description={pathData.description}
                    estimatedMinutes={stats.estimatedMinutes}
                    topicCount={stats.topicCount}
                    objectives={stats.objectives}
                  />
                );
              })}
            </div>
          </div>

          <!-- All paths by category -->
          <div class="all-paths">
            <a href="/learn/paths/" class="view-all-link">
              View all {personas.length + tracks.length + journeys.length} learning paths â†’
            </a>
          </div>
        </section>

        <!-- State: Active path - show world map -->
        <section class="active-journey" id="active-journey" style="display: none;">
          <div class="journey-header">
            <h2 data-current-path-name>Current Journey</h2>
            <button class="change-path-btn" id="change-path-btn">
              Change Path
            </button>
          </div>

          <WorldMap />

          <div class="journey-actions">
            <a href="#" class="btn btn-primary" id="continue-learning-btn">
              Continue Learning
            </a>
          </div>
        </section>
      </div>

      <!-- Right column: Streak and stats -->
      <aside class="sidebar">
        <StreakDisplay showCalendar={true} calendarDays={30} />

        <!-- Quick stats -->
        <div class="quick-stats">
          <h3 class="stats-title">Your Progress</h3>
          <div class="stats-grid">
            <div class="stat-card">
              <span class="stat-value" data-total-topics>0</span>
              <span class="stat-label">Topics Completed</span>
            </div>
            <div class="stat-card">
              <span class="stat-value" data-total-time>0h</span>
              <span class="stat-label">Time Spent</span>
            </div>
            <div class="stat-card">
              <span class="stat-value" data-paths-started>0</span>
              <span class="stat-label">Paths Started</span>
            </div>
          </div>
        </div>

        <!-- Help section -->
        <div class="help-section">
          <h4>Not sure where to start?</h4>
          <p>Take our quick quiz to find the perfect learning path for your goals.</p>
          <a href="/learn/paths/" class="btn btn-secondary">
            Browse All Paths
          </a>
        </div>

        <!-- Reset progress -->
        <div class="reset-section">
          <button class="reset-btn" id="reset-progress-btn">
            Reset All Progress
          </button>
        </div>
      </aside>
    </div>
  </main>

  <!-- Pass paths data to client -->
  <script define:vars={{ allPathsMap }}>
    window.__PATHS_MAP__ = allPathsMap;
  </script>
</BaseLayout>

<script>
  import { loadProgress, clearCurrentPath, saveProgress, resetAllProgress } from '../../utils/progressStore';

  function initLearnHub() {
    const progress = loadProgress();
    const pathsMap = (window as any).__PATHS_MAP__ || {};

    // Check if user has an active path
    const hasActivePath = progress.currentPathId !== null;

    // Toggle sections based on state
    const pathSelection = document.getElementById('path-selection');
    const activeJourney = document.getElementById('active-journey');

    if (hasActivePath && activeJourney && pathSelection) {
      pathSelection.style.display = 'none';
      activeJourney.style.display = 'block';

      // Update path name from paths map
      const pathNameEl = document.querySelector('[data-current-path-name]');
      if (pathNameEl && progress.currentPathId) {
        const pathInfo = pathsMap[progress.currentPathId];
        pathNameEl.textContent = pathInfo?.name || progress.currentPathId;
      }
    } else if (pathSelection && activeJourney) {
      pathSelection.style.display = 'block';
      activeJourney.style.display = 'none';
    }

    // Update stats
    const totalTopicsEl = document.querySelector('[data-total-topics]');
    const totalTimeEl = document.querySelector('[data-total-time]');
    const pathsStartedEl = document.querySelector('[data-paths-started]');

    if (totalTopicsEl) {
      totalTopicsEl.textContent = progress.stats.totalTopicsCompleted.toString();
    }

    if (totalTimeEl) {
      const hours = Math.floor(progress.stats.totalTimeSpentMinutes / 60);
      const mins = progress.stats.totalTimeSpentMinutes % 60;
      totalTimeEl.textContent = hours > 0 ? `${hours}h ${mins}m` : `${mins}m`;
    }

    if (pathsStartedEl) {
      pathsStartedEl.textContent = Object.keys(progress.pathProgress).length.toString();
    }

    // Change path button
    const changePathBtn = document.getElementById('change-path-btn');
    changePathBtn?.addEventListener('click', () => {
      const confirmChange = window.confirm(
        'Switching paths will not delete your progress. You can always come back to this path later. Continue?'
      );
      if (confirmChange && pathSelection && activeJourney) {
        // Clear current path in progress store
        let currentProgress = loadProgress();
        currentProgress = clearCurrentPath(currentProgress);

        // Update UI
        activeJourney.style.display = 'none';
        pathSelection.style.display = 'block';
      }
    });

    // Continue learning button
    const continueBtn = document.getElementById('continue-learning-btn');
    if (continueBtn && progress.currentPathId) {
      const pathProgress = progress.pathProgress[progress.currentPathId];
      if (pathProgress) {
        // Navigate to the current step's topic
        continueBtn.setAttribute('href', '/learn/journey/');
      }
    }

    // Reset progress button
    const resetBtn = document.getElementById('reset-progress-btn');
    resetBtn?.addEventListener('click', () => {
      const confirmReset = window.confirm(
        'Are you sure you want to reset all your progress? This will delete all completed topics, streaks, and path progress. This action cannot be undone.'
      );
      if (confirmReset) {
        resetAllProgress();
        // Refresh the page to show reset state
        window.location.reload();
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initLearnHub);

  window.addEventListener('storage', (e) => {
    if (e.key === 'htbaa_learning_progress') {
      initLearnHub();
    }
  });
</script>

