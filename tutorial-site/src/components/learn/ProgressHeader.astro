---
// ProgressHeader Component - Shows current path progress and streak info
// Displays at the top of the learning experience pages

export interface Props {
  pathName?: string;
  pathId?: string;
  totalSteps?: number;
  class?: string;
}

const {
  pathName = '',
  pathId = '',
  totalSteps = 0,
  class: className = '',
} = Astro.props;
---

<div class={`progress-header ${className}`} data-path-id={pathId} data-total-steps={totalSteps}>
  <div class="progress-content">
    <!-- Current path info -->
    <div class="path-info">
      {pathName ? (
        <>
          <span class="path-label">Current Journey</span>
          <h2 class="path-name">{pathName}</h2>
        </>
      ) : (
        <span class="path-placeholder">No active journey</span>
      )}
    </div>

    <!-- Progress stats -->
    <div class="progress-stats">
      <!-- Streak display -->
      <div class="stat-item streak-stat">
        <div class="streak-icon" data-intensity="none">
          <span class="flame">ðŸ”¥</span>
        </div>
        <div class="stat-content">
          <span class="stat-value" data-streak-count>0</span>
          <span class="stat-label">Day Streak</span>
        </div>
      </div>

      <!-- Topics completed -->
      <div class="stat-item">
        <div class="stat-content">
          <span class="stat-value" data-completed-topics>0</span>
          <span class="stat-label">Topics Done</span>
        </div>
      </div>

      <!-- Path progress -->
      {totalSteps > 0 && (
        <div class="stat-item">
          <div class="stat-content">
            <span class="stat-value">
              <span data-completed-steps>0</span>/{totalSteps}
            </span>
            <span class="stat-label">Steps</span>
          </div>
        </div>
      )}
    </div>
  </div>

  <!-- Progress bar for current path -->
  {totalSteps > 0 && (
    <div class="progress-bar-container">
      <div class="progress-bar">
        <div class="progress-fill" data-progress-percent style="width: 0%"></div>
      </div>
      <span class="progress-percent-text" data-progress-text>0%</span>
    </div>
  )}

  <!-- Streak message -->
  <div class="streak-message" data-streak-message>
    Start learning to begin your streak!
  </div>
</div>

<script>
  import { loadProgress, getPathCompletionPercent } from '../../utils/progressStore';
  import { getStreakStatus, getStreakIntensity } from '../../utils/streaks';

  function initProgressHeader() {
    const header = document.querySelector('.progress-header');
    if (!header) return;

    const pathId = header.getAttribute('data-path-id');
    const totalSteps = parseInt(header.getAttribute('data-total-steps') || '0', 10);

    const progress = loadProgress();
    const streakStatus = getStreakStatus(progress);
    const intensity = getStreakIntensity(streakStatus.currentStreak);

    // Update streak count
    const streakCountEl = header.querySelector('[data-streak-count]');
    if (streakCountEl) {
      streakCountEl.textContent = streakStatus.currentStreak.toString();
    }

    // Update streak icon intensity
    const streakIcon = header.querySelector('.streak-icon');
    if (streakIcon) {
      streakIcon.setAttribute('data-intensity', intensity);
    }

    // Update streak message
    const streakMessageEl = header.querySelector('[data-streak-message]');
    if (streakMessageEl) {
      streakMessageEl.textContent = streakStatus.message;

      // Add urgency class
      streakMessageEl.classList.remove('urgency-safe', 'urgency-warning', 'urgency-danger', 'urgency-lost');
      streakMessageEl.classList.add(`urgency-${streakStatus.urgency}`);
    }

    // Update completed topics count
    const completedTopicsEl = header.querySelector('[data-completed-topics]');
    if (completedTopicsEl) {
      completedTopicsEl.textContent = progress.stats.totalTopicsCompleted.toString();
    }

    // Update path progress if we have a path
    if (pathId && totalSteps > 0) {
      const pathProgress = progress.pathProgress[pathId];
      const completedSteps = pathProgress?.completedSteps.length || 0;
      const percent = getPathCompletionPercent(progress, pathId, totalSteps);

      const completedStepsEl = header.querySelector('[data-completed-steps]');
      if (completedStepsEl) {
        completedStepsEl.textContent = completedSteps.toString();
      }

      const progressFill = header.querySelector('[data-progress-percent]') as HTMLElement;
      if (progressFill) {
        progressFill.style.width = `${percent}%`;
      }

      const progressText = header.querySelector('[data-progress-text]');
      if (progressText) {
        progressText.textContent = `${percent}%`;
      }
    }
  }

  document.addEventListener('DOMContentLoaded', initProgressHeader);

  window.addEventListener('storage', (e) => {
    if (e.key === 'htbaa_learning_progress') {
      initProgressHeader();
    }
  });
</script>

<style>
  .progress-header {
    background: rgba(30, 41, 59, 0.95);
    border-bottom: 1px solid rgb(51, 65, 85);
    padding: 1rem 1.5rem;
  }

  .progress-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  /* Path info */
  .path-info {
    flex: 1;
    min-width: 0;
  }

  .path-label {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(100, 116, 139);
    display: block;
    margin-bottom: 0.25rem;
  }

  .path-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: rgb(241, 245, 249);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .path-placeholder {
    font-size: 0.875rem;
    color: rgb(100, 116, 139);
    font-style: italic;
  }

  /* Stats */
  .progress-stats {
    display: flex;
    gap: 1.5rem;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: rgb(226, 232, 240);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.5625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(100, 116, 139);
  }

  /* Streak icon */
  .streak-icon {
    font-size: 1.5rem;
    line-height: 1;
    transition: all 0.3s ease;
  }

  .streak-icon[data-intensity="none"] {
    opacity: 0.3;
    filter: grayscale(1);
  }

  .streak-icon[data-intensity="low"] {
    opacity: 0.6;
  }

  .streak-icon[data-intensity="medium"] {
    opacity: 0.8;
  }

  .streak-icon[data-intensity="high"] {
    opacity: 1;
    animation: flame-pulse 1.5s ease-in-out infinite;
  }

  .streak-icon[data-intensity="max"] {
    opacity: 1;
    animation: flame-intense 0.8s ease-in-out infinite;
    filter: drop-shadow(0 0 8px rgba(251, 146, 60, 0.5));
  }

  @keyframes flame-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes flame-intense {
    0%, 100% { transform: scale(1) rotate(-3deg); }
    50% { transform: scale(1.15) rotate(3deg); }
  }

  /* Progress bar */
  .progress-bar-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .progress-bar {
    flex: 1;
    height: 6px;
    background: rgb(51, 65, 85);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, rgb(52, 211, 153), rgb(56, 189, 248));
    border-radius: 3px;
    transition: width 0.5s ease;
  }

  .progress-percent-text {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgb(148, 163, 184);
    min-width: 3ch;
    text-align: right;
  }

  /* Streak message */
  .streak-message {
    font-size: 0.75rem;
    text-align: center;
    padding: 0.5rem;
    border-radius: 0.375rem;
    background: rgba(51, 65, 85, 0.5);
  }

  .streak-message.urgency-safe {
    color: rgb(52, 211, 153);
    background: rgba(52, 211, 153, 0.1);
  }

  .streak-message.urgency-warning {
    color: rgb(251, 191, 36);
    background: rgba(251, 191, 36, 0.1);
  }

  .streak-message.urgency-danger {
    color: rgb(239, 68, 68);
    background: rgba(239, 68, 68, 0.1);
  }

  .streak-message.urgency-lost {
    color: rgb(148, 163, 184);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .progress-header {
      padding: 0.75rem 1rem;
    }

    .progress-content {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    .path-info {
      text-align: center;
    }

    .progress-stats {
      justify-content: center;
      gap: 1rem;
    }

    .stat-content {
      align-items: center;
    }

    .streak-stat {
      order: -1;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .streak-icon,
    .progress-fill {
      animation: none;
      transition: none;
    }
  }
</style>
