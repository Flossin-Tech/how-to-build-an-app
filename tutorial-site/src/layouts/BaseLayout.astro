---
import '../styles/global.css';
import { joinPath, getBase } from '../utils/paths';
import StreakNotification from '../components/learn/StreakNotification.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Non-linear guide to software development" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = getBase();
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | How to Build an App</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <meta name="generator" content={Astro.generator}>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="apple-touch-icon" href="/favicon.png">
  </head>
  <body class="bg-slate-900 text-slate-100 font-sans">
    <StreakNotification />
    <header class="sticky top-0 z-50 bg-slate-800 border-b border-slate-700">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href={base} class="flex items-center gap-3 text-xl font-bold text-primary-500 hover:text-primary-400 transition">
            <img
              src={joinPath('/assets/images/flossin-tech.png')}
              alt="Flossin Tech Logo"
              class="w-10 h-10 rounded-full object-cover"
            />
            <span>How to Build an App</span>
          </a>

          <nav class="hidden md:flex items-center gap-6">
            <a href={joinPath('/learn/')} class="hover:text-primary-400 transition font-medium">Learn</a>
            <a href={joinPath('/phases/')} class="hover:text-primary-400 transition">Browse</a>
            <a href={joinPath('/paths/')} class="hover:text-primary-400 transition">Paths</a>
            <a href={joinPath('/about/')} class="hover:text-primary-400 transition">About</a>
          </nav>
          
          <button id="mobile-menu-toggle" class="md:hidden" aria-label="Toggle menu" aria-expanded="false">
            <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu (hidden by default) -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-slate-700">
          <nav class="flex flex-col py-4">
            <a href={joinPath('/learn/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition font-medium">Learn</a>
            <a href={joinPath('/phases/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">Browse</a>
            <a href={joinPath('/paths/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">Paths</a>
            <a href={joinPath('/about/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">About</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="bg-slate-800 mt-16 py-8 border-t border-slate-700">
      <div class="container mx-auto px-4 text-center text-slate-400">
        <p class="mb-2">How to Build an App</p>
        <p class="text-sm mb-4">Non-linear guide to software development</p>
        <div class="flex items-center justify-center gap-4">
          <a
            href="https://github.com/Flossin-Tech/how-to-build-an-app"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-slate-400 hover:text-primary-400 transition text-sm"
            aria-label="View on GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
            View on GitHub
          </a>
          <img
            src="https://visitor-badge.laobi.icu/badge?page_id=Flossin-Tech.how-to-build-an-app"
            alt="Visitor count"
            class="h-5"
          />
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIconOpen = document.getElementById('menu-icon-open');
      const menuIconClose = document.getElementById('menu-icon-close');

      mobileMenuToggle?.addEventListener('click', () => {
        const isHidden = mobileMenu?.classList.toggle('hidden');

        // Toggle icon visibility
        menuIconOpen?.classList.toggle('hidden');
        menuIconClose?.classList.toggle('hidden');

        // Update aria-expanded for accessibility
        mobileMenuToggle.setAttribute('aria-expanded', isHidden ? 'false' : 'true');
      });

      // Close menu when a link is clicked
      const mobileLinks = mobileMenu?.querySelectorAll('a');
      mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu?.classList.add('hidden');
          menuIconOpen?.classList.remove('hidden');
          menuIconClose?.classList.add('hidden');
          mobileMenuToggle?.setAttribute('aria-expanded', 'false');
        });
      });
    </script>
    <!-- Cloudflare Web Analytics --><script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "d7778fb721d44229b978cb5158308eac"}'></script><!-- End Cloudflare Web Analytics -->
  </body>
</html>
