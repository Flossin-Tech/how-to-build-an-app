---
import '../styles/global.css';
import { joinPath, getBase } from '../utils/paths';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Non-linear guide to software development" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = getBase();
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | How to Build an App</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <meta name="generator" content={Astro.generator}>
  </head>
  <body class="bg-slate-900 text-slate-100 font-sans">
    <header class="sticky top-0 z-50 bg-slate-800 border-b border-slate-700">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href={base} class="flex items-center gap-3 text-xl font-bold text-primary-500 hover:text-primary-400 transition">
            <img
              src={joinPath('/assets/images/flossin-tech.png')}
              alt="Flossin Tech Logo"
              class="w-10 h-10 rounded-full object-cover"
            />
            <span>How to Build an App</span>
          </a>

          <nav class="hidden md:flex items-center gap-6">
            <a href={joinPath('/phases/')} class="hover:text-primary-400 transition">Browse</a>
            <a href={joinPath('/paths/')} class="hover:text-primary-400 transition">Learning Paths</a>
            <a href={joinPath('/about/')} class="hover:text-primary-400 transition">About</a>
          </nav>
          
          <button id="mobile-menu-toggle" class="md:hidden" aria-label="Toggle menu" aria-expanded="false">
            <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu (hidden by default) -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-slate-700">
          <nav class="flex flex-col py-4">
            <a href={joinPath('/phases/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">Browse</a>
            <a href={joinPath('/paths/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">Learning Paths</a>
            <a href={joinPath('/about/')} class="px-4 py-3 hover:bg-slate-700 hover:text-primary-400 transition">About</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="bg-slate-800 mt-16 py-8 border-t border-slate-700">
      <div class="container mx-auto px-4 text-center text-slate-400">
        <p class="mb-2">How to Build an App</p>
        <p class="text-sm">Non-linear guide to software development</p>
      </div>
    </footer>

    <script>
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIconOpen = document.getElementById('menu-icon-open');
      const menuIconClose = document.getElementById('menu-icon-close');

      mobileMenuToggle?.addEventListener('click', () => {
        const isHidden = mobileMenu?.classList.toggle('hidden');

        // Toggle icon visibility
        menuIconOpen?.classList.toggle('hidden');
        menuIconClose?.classList.toggle('hidden');

        // Update aria-expanded for accessibility
        mobileMenuToggle.setAttribute('aria-expanded', isHidden ? 'false' : 'true');
      });

      // Close menu when a link is clicked
      const mobileLinks = mobileMenu?.querySelectorAll('a');
      mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu?.classList.add('hidden');
          menuIconOpen?.classList.remove('hidden');
          menuIconClose?.classList.add('hidden');
          mobileMenuToggle?.setAttribute('aria-expanded', 'false');
        });
      });
    </script>
  </body>
</html>
